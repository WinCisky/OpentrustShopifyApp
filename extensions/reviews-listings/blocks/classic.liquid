{% schema %}
{
  "name": "Reviews classic",
  "target": "section",
  "stylesheet": "app.css",
  "javascript": "app.js",
  "settings": [
    {
      "label": "Accent Color Active Dots",
      "id": "accent_color_active_dots",
      "type": "color",
      "default": "#F5F5F5"
    },
    {
        "label": "Accent Color Active Border",
        "id": "accent_color_active_border",
        "type": "color",
        "default": "#2196F3 "
    },
    {
      "label": "Accent Color Inactive",
      "id": "accent_color_inactive",
      "type": "color",
      "default": "#E1E3E4"
    }
  ]
}
{% endschema %}
