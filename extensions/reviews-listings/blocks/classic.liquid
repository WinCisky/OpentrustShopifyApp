<style>
    .splide__slide{
        border-color: {{ block.settings.accent_color_inactive }} !important;
    }

    .splide__slide.is-active{
        border-color: {{ block.settings.accent_color_active_border }} !important;
    }
    
    .splide__pagination__page.is-active{
        background: {{ block.settings.accent_color_active_dots }} !important;
    }

    .splide__slide .stars .active {
        color: {{ block.settings.accent_color_active_border }} !important;
    }
</style>

